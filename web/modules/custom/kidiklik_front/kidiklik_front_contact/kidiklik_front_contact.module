function kidiklik_front_contact_validate_contact_form($form, FormStateInterface $form_state)
{
    $ip=\Drupal::request()->server->get('HTTP_X_REAL_IP');
    $api_whois = sprintf('https://ipwhois.app/json/%s', $ip);
    $whois_info = json_decode(file_get_contents($api_whois));
    
    if(strtolower($whois_info->country) !== 'france') {
      (new RedirectResponse('/404' ))->send();
      exit();
    }
    
    $test = current($form_state->getValue('field_age'))['value'] ?? null;
    if(!empty($test)) {
        $form_state->setErrorByName('kidiklik_contact', 'Une erreur est survenue !');
    }
}
